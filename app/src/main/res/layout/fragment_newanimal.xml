<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newanimal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="@color/white"
    tools:context=".Fragment.Aggiungi_Animale">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img"
            android:layout_width="186dp"
            android:layout_height="173dp"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FA783535"
            android:contentDescription="@string/imagenuova"
            android:src="@drawable/logo"
            app:civ_border_width="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/testo"
            android:layout_width="155dp"
            android:layout_height="53dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/coustard"
            android:text="@string/nuovoamicotranoi"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.578"
            app:layout_constraintStart_toEndOf="@+id/img"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/nome_animale"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@color/main_color"
            android:fontFamily="@font/coustard"
            android:hint="@string/nome_animale"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:textColorHint="@color/black"
            android:visibility="visible"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:endIconMode="clear_text"
            app:errorEnabled="true"
            app:helperTextTextColor="@color/black"
            app:hintTextColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img"
            tools:ignore="TextContrastCheck,SpeakableTextPresentCheck" />


        <Spinner
            android:id="@+id/specie_animale"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@color/main_color"
            android:fontFamily="@font/coustard"
            android:hint="@string/Specie_animale"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:textColorHint="#AE8E87"
            android:visibility="visible"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:endIconMode="clear_text"
            app:errorEnabled="true"
            app:helperTextTextColor="@color/black"
            app:hintTextColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nome_animale"
            tools:ignore="TextContrastCheck,SpeakableTextPresentCheck" />


        <Spinner
            android:id="@+id/sesso_animale"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@color/main_color"
            android:fontFamily="@font/coustard"
            android:hint="@string/sesso_animale_text"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:textColorHint="#AE8E87"
            android:textSize="18sp"
            android:visibility="visible"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:endIconMode="clear_text"
            app:errorEnabled="true"
            app:helperTextTextColor="@color/black"
            app:hintTextColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/specie_animale"
            tools:ignore="TextContrastCheck,SpeakableTextPresentCheck" />


        <EditText
            android:id="@+id/preferenza_animale"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@color/main_color"
            android:fontFamily="@font/coustard"
            android:hint="@string/preferenza"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            android:visibility="visible"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:endIconMode="clear_text"
            app:errorEnabled="true"
            app:helperTextTextColor="@color/black"
            app:hintTextColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sesso_animale"
            tools:ignore="TextContrastCheck,SpeakableTextPresentCheck,DuplicateClickableBoundsCheck" />


        <Spinner
            android:id="@+id/salute_animale"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@color/main_color"
            android:fontFamily="@font/coustard"
            android:hint="@string/salute"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:textColorHint="#AE8E87"
            android:textSize="18sp"
            android:visibility="visible"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:endIconMode="clear_text"
            app:errorEnabled="true"
            app:helperTextTextColor="@color/black"
            app:hintTextColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/preferenza_animale"
            tools:ignore="TextContrastCheck,SpeakableTextPresentCheck" />


        <Spinner
            android:id="@+id/sterilizzazione_animale"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@color/main_color"
            android:fontFamily="@font/coustard"
            android:hint="@string/sterilizzazione"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:textColorHint="#AE8E87"
            android:textSize="18sp"
            android:visibility="visible"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:endIconMode="clear_text"
            app:errorEnabled="true"
            app:helperTextTextColor="@color/black"
            app:hintTextColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/salute_animale"
            tools:ignore="TextContrastCheck,SpeakableTextPresentCheck" />


        <EditText
            android:id="@+id/eta_animale"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@color/main_color"
            android:fontFamily="@font/coustard"
            android:hint="@string/eta"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            android:visibility="visible"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:endIconMode="clear_text"
            app:errorEnabled="true"
            app:helperTextTextColor="@color/black"
            app:hintTextColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sterilizzazione_animale"
            tools:ignore="TextContrastCheck,SpeakableTextPresentCheck" />


        <EditText
            android:id="@+id/chip_animale"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@color/main_color"
            android:fontFamily="@font/coustard"
            android:hint="@string/chip"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            android:visibility="visible"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:endIconMode="clear_text"
            app:errorEnabled="true"
            app:helperTextTextColor="@color/black"
            app:hintTextColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/eta_animale"
            tools:ignore="TextContrastCheck,SpeakableTextPresentCheck" />


        <Button
            android:id="@+id/caricamentoanimale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/zxing_viewfinder_laser"
            android:fontFamily="@font/coustard"
            android:text="@string/Conferma"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chip_animale" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>