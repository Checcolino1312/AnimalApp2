<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="20dp"
    app:cardUseCompatPadding="true"

    >


    <RelativeLayout
        android:id="@+id/animali_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="8dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            app:civ_border_color="@color/black"
            app:civ_border_width="2dp"
            android:contentDescription="@string/immagine" />

        <TextView
            android:id="@+id/nome_item"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/img1"
            android:text="@string/nomeanimal"
            android:textColor="@color/main_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/specie_item"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nome_item"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/img1"
            android:text="@string/specie"
            android:textColor="@color/main_color"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_follow"
            android:backgroundTint="@color/main_color"
            android:layout_width="166dp"
            android:layout_height="46dp"
            android:layout_alignTop="@+id/img1"
            android:layout_alignBottom="@+id/img1"
            android:textColor="@color/black"
            android:text="@string/follow"
            android:layout_marginStart="184dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="23dp"
            android:layout_toEndOf="@+id/img1"
            android:textSize="15sp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>


