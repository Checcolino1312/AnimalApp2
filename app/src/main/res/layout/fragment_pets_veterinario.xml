<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Fragment.Animali_Veterinario_Fragment">


    <TextView
        android:id="@+id/animaliInStallo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/coustard"
        android:hint="@string/animaliInStallo"
        android:padding="14dp"
        android:textAlignment="center"
        android:textColorHint="@android:color/black"
        android:textSize="28sp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_pet_stallo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/animaliInStallo"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:paddingTop="28dp" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_Qr_Code_NewStallo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/main_color"
        android:contentDescription="@string/nuovaSegnalazione"
        app:srcCompat="@mipmap/baseline_qr_code_scanner_black_24" />




</RelativeLayout>